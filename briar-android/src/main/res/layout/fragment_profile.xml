<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	android:id="@+id/profile_fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.briarproject.briar.android.profile.ProfileActivity"
    tools:showIn="@layout/activity_profile">

	<ImageView
		android:id="@+id/image_avatar_profile"
		android:layout_width="120dp"
		android:layout_height="120dp"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="10dp"
		android:padding="5dp"
		/>

	<Button
		android:id="@+id/choose_avatar_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:gravity="center"
		android:layout_marginTop="140dp"
		android:text="Change avatar"/>

	<Button
		android:id="@+id/set_status_button"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="220dp"
		android:paddingLeft="30dp"
		android:drawableLeft="@drawable/contact_connected"
		android:drawablePadding="-50dp"
		android:background="@color/menu_background"
		android:text="Set a Status"/>



</RelativeLayout>

